#include <iostream> 
using namespace std;
int main()
{
   int array[100], num, i;
   cout << "Enter Number of elements\n";
   cin >> num;
   cout << "Enter " << num << " Integers\n";
   for(i =0; i<num;++i)
   {
      cin >> array[i];
   }
   cout << "Array Content\n";
   for(i=0;i<num;++i)
   {
      cout << *(array+i) << " ";
   }
   return 0;
}
